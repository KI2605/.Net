@page "{id:int}"
@model Chapter18.Pages.EditModel
@{
    ViewData["Title"] = "Редактирование пользователя";
}
<h2>@ViewData["Title"]</h2>

<form method="post">
    <div asp-validation-summary="All"></div>
    <input asp-for="Humen.Id" type="hidden" />
    <div>
        <label>Имя</label>
        <div>
            <input asp-for="Humen.Name" />
            <span asp-validation-for="Humen.Name"></span>
        </div>
    </div>
    <div>
        <label>Пароль</label>
        <div>
            <input asp-for="Humen.Password" type="number" />
            <span asp-validation-for="Humen.Password"></span>
        </div>
    </div>
    <div>
        <input type="submit" value="Сохранить" />
    </div>
</form>
